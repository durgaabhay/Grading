nav.navbar.navbar-dark.sticky-top.bg-dark.flex-md-nowrap.p-0
    a.navbar-brand.col-sm-3.col-md-2.mr-0(href='#') Group 1 Final Project
    ul.navbar-nav.px-3
        li.nav-item.text-nowrap
            a.nav-link(href='#') Sign out


.container-fluid
    .row
        nav.col-md-2.d-none.d-md-block.bg-light.sidebar
            .sidebar-sticky
                ul.nav.flex-column
                    li.nav-item
                        a.nav-link.active(href='#')
                            span(data-feather='home')
                            |                             Dashboard
                            span.sr-only (current)
                    li.nav-item
                        a.nav-link(href='/teams/showTeams')
                            span(data-feather='users')
                            |                             Teams
                    li.nav-item
                        a.nav-link(href='/evaluators/showEval')
                            span(data-feather='briefcase')
                            |                             Evaluators
                    li.nav-item
                        a.nav-link(href='/surveys/showSurveyPage')
                            span(data-feather='anchor')
                            |                             Create Survey
                    li.nav-item
                        a.nav-link(href='/surveys/fetchCurrentSurvey')
                            span(data-feather='aperture')
                            |                             Preview Survey
                    li.nav-item
                        a.nav-link(href='/scores/showScoreBoard')
                            span(data-feather='bar-chart-2')
                            |                             Score Board
        main.col-md-9.ml-sm-auto.col-lg-10.pt-3.px-4(role='main')
            .d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pb-2.mb-3.border-bottom
                h1.h2 Dashboard
            #accordion
                .card
                    #headingOne.card-header
                        h5.mb-0
                            button.btn.btn-link(data-toggle='collapse' data-target='#newTeamForm' aria-expanded='true' aria-controls='collapseOne')
                                | Create New Team
                    #newTeamForm.collapse.show(aria-labelledby='headingOne' data-parent='#accordion')
                        .card-body
                            form(method='POST' action='/teams/addTeam')
                                .row
                                    .col
                                        input.form-control(type='text' name='teamName' placeholder='Team name')
                                    button.btn.btn-primary(type='submit') Create
                .card
                    #headingTwo.card-header
                        h5.mb-0
                            button.btn.btn-link.collapsed(data-toggle='collapse' data-target='#showEvalForm' aria-expanded='false' aria-controls='collapseTwo')
                                | Add Evaluator
                    #showEvalForm.collapse(aria-labelledby='headingTwo' data-parent='#accordion')
                        .card-body
                            form(method='POST' action='/evaluators')
                                .row
                                    .col
                                        input.form-control(type='text' name='evaluatorName' placeholder='Evaluator name')
                                    button.btn.btn-primary(type='submit') Add
